{
    "openapi": "3.0.0",
    "info": {
        "title": "AutoCalendar Documentation",
        "description": "This is a API builded in Autoplay",
        "version": "1.0.0",
        "contact": {
            "email": "zortea.lucas@gmail.com"
        }
    },
    "paths": {
        "/pillars": {
            "post": {
                "tags": ["Pillar"],
                "summary": "Create a pillar",
                "description": "Create a new pillar",
                "requestBody": {
                    "content":  {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Pillar name sample",
                                    "description": "Pillar description sample"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "Pillar already exists"
                    }
                }
            },
            "get": {
                "tags": ["Pillar"],
                "summary":"List all pillars",
                "description": "List all pillars",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type":"object",
                                        "properties": {
                                            "name": {
                                                "type":"string"
                                            },
                                            "description": {
                                                "type":"string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }

                }
            }
        }
    }
}